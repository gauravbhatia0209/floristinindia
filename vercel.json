{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/client/dist/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/admin/(.*)",
      "destination": "/client/dist/index.html"
    },
    {
      "source": "/((?!api).*)",
      "destination": "/client/dist/index.html"
    }
  ]
}
