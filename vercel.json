{
  "buildCommand": "npm run build:client",
  "outputDirectory": "client/dist",
  "redirects": [
    {
      "source": "/robots.txt",
      "destination": "/api/_sitemap/robots",
      "permanent": true
    },
    {
      "source": "/sitemap.xml",
      "destination": "/api/_sitemap/xml",
      "permanent": true
    },
    {
      "source": "/sitemap.txt",
      "destination": "/api/_sitemap/txt",
      "permanent": true
    },
    {
      "source": "/sitemap",
      "destination": "/api/_sitemap/html",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
