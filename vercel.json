{
  "buildCommand": "npm run build:server && npm run build:client",
  "outputDirectory": "client/dist",
  "functions": {
    "api/[...path].js": {
      "maxDuration": 60,
      "memory": 1024
    }
  },
  "routes": [
    {
      "src": "/assets/.*",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/robots.txt",
      "dest": "/api/[...path].js"
    },
    {
      "src": "/sitemap.xml",
      "dest": "/api/[...path].js"
    },
    {
      "src": "/sitemap.txt",
      "dest": "/api/[...path].js"
    },
    {
      "src": "/sitemap",
      "dest": "/api/[...path].js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/[...path].js"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/api/[...path].js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
